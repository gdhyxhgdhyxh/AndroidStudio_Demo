<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/bg_white">

    <ImageView
        android:id="@+id/kv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:src="@mipmap/wo_chaojibi"/>

    <TextView
        android:id="@+id/kv_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/kv_icon"
        android:text="key"
        android:textColor="#444444"
        android:textSize="15dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/kv_right_view"
            android:text="hehehehh"
            android:textColor="#888888"
            android:textSize="13dp"/>

        <ImageView
            android:id="@+id/kv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:src="@mipmap/wo_next_page"/>

        <!--<TextView-->
        <!--android:id="@+id/kv_right_view_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@mipmap/wo_next_page"-->
        <!--android:textColor="#888888"-->
        <!--android:textSize="13dp"-->
        <!--android:visibility="gone"/>-->
    </LinearLayout>


    <View
        android:id="@+id/kv_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_separator"
        android:visibility="gone"/>


</RelativeLayout>